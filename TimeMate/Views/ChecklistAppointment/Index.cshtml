@model TimeMate.Models.ChecklistAppointmentViewModel

@{
    ViewData["Title"] = "Nieuwe afspraak met taken toevoegen";
}

<h1>Nieuwe afspraak met taken toevoegen</h1>

<hr />
<form asp-action="Index" id="appointment-form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <partial name="_AddAppointment" for="@Model.AppointmentViewModel" />

            <div class="form-group">
                <label asp-for="Task" class="control-label"></label>
                <input asp-for="Task[0]" class="form-control" />
                <span asp-validation-for="Task[0]" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task" class="control-label"></label>
                <input asp-for="Task[1]" class="form-control" />
                <span asp-validation-for="Task[1]" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task" class="control-label"></label>
                <input asp-for="Task[2]" class="form-control" />
                <span asp-validation-for="Task[2]" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task" class="control-label"></label>
                <input asp-for="Task[3]" class="form-control" />
                <span asp-validation-for="Task[3]" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task" class="control-label"></label>
                <input asp-for="Task[4]" class="form-control" />
                <span asp-validation-for="Task[4]" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6 float-right">
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Afspraak toevoegen" />
                <input type="button" class="btn btn-outline-primary" value="Negeren" onclick="location.href='@Url.Action("Index", "Agenda")'" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
