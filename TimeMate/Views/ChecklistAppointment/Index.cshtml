@model TimeMate.Models.ChecklistAppointmentViewModel

@{
    ViewData["Title"] = "Nieuwe afspraak met taken toevoegen";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/add-checklistappointment.js"></script>
<script src="~/js/add-appointment-date.js"></script>

<h1>Nieuwe afspraak met taken toevoegen</h1>

<hr />
<form asp-action="Index" id="appointment-form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <partial name="_AddAppointment" for="@Model.AppointmentViewModel" />
            <div class="form-group">
                <input type="button" id="add-task-field" class="btn btn-info" value="Taak toevoegen" />
            </div>
            <div class="form-group">
                <div id="new-task-collection"></div>
            </div>
        </div>
        <div class="col-md-4 float-right">
            <div class="form-group">
                <input type="submit" id="submit-appointment-btn" class="btn btn-primary" value="Afspraak toevoegen" />
                <input type="button" class="btn btn-outline-primary" value="Negeren" onclick="location.href='@Url.Action("Index", "AgendaView")'" />
            </div>
        </div>
        <div class="col-md-2 float-right">
            <div class="text-danger" id="date-error"></div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
