@model TimeMate.Models.RegisterViewModel
@{
    ViewData["Title"] = "Registreren";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/js/register.js"></script>

<h1>Maak een account aan</h1>

<hr />
<form asp-action="Register">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-sm-4">
            <div>Wachwoordeisen:</div>
            <ul>
                <li>Minimaal 9 tekens lang</li>
                <li>1 hoofdletter bevatten</li>
                <li>1 cijfer bevatten</li>
                <li>1 speciale teken bevatten</li>
            </ul>

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mail" class="control-label"></label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="JobAmount" class="control-label"></label>
                <input asp-for="JobAmount" class="form-control" id="job-amount" min="0" max="2" />
                <span asp-validation-for="JobAmount" class="text-danger"></span>
            </div>

            <div class="d-none" id="job1">
                <div class="form-group">
                    <label asp-for="Job1HourlyWage" class="control-label"></label>
                    <input asp-for="Job1HourlyWage" class="form-control" />
                    <span asp-validation-for="Job1HourlyWage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Job1DayType" class="control-label"></label>
                    <select asp-for="Job1DayType" class="form-control">
                        <option></option>
                        <option>Doordeweeks</option>
                        <option>Weekend</option>
                    </select>
                    <span asp-validation-for="Job1DayType" class="text-danger"></span>
                </div>
            </div>

            <div class="d-none" id="job2">
                <div class="form-group">
                    <label asp-for="Job2HourlyWage" class="control-label"></label>
                    <input asp-for="Job2HourlyWage" class="form-control" />
                    <span asp-validation-for="Job2HourlyWage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Job2DayType" class="control-label"></label>
                    <select asp-for="Job2DayType" class="form-control">
                        <option></option>
                        <option>Doordeweeks</option>
                        <option>Weekend</option>
                    </select>
                    <span asp-validation-for="Job2DayType" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input id="register-button" type="submit" value="Registeer" class="btn btn-success" />
                <input id="go-login-button" type="button" value="Terug naar inloggen" onclick="location.href='@Url.Action("Index", "Account")'" class="btn btn-warning" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
