@model TimeMate.Models.NAppointmentViewModel

@{
    ViewData["Title"] = "Nieuwe afspraak toevoegen";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/AddNormalAppointment.js"></script>
<link rel="stylesheet" type="text/css" href="~/css/AddNormalAppointment.css" />

<h1>Nieuwe afspraak toevoegen</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <partial name="_AddAppointment" for="@Model.AppointmentViewModel" />


            <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input type="button" id="bolding-text" class="btn btn-secondary" value="Maak text dikgedrukt" />
                <input type="button" id="bolding-text" class="btn btn-secondary" value="Tekst opslaan" onclick="GetDescriptionInput()" />
                <div class="description" id="descriptionBox" contenteditable="true" style="width:360px; height: 120px" ; border: 1px solid #ccc;></div>
                <span asp-validation-for="Description" class="text-danger"></span>
                <input type="text" id="sendController" asp-for="Description" hidden="hidden" />
                @*<textarea class="description" rows="10" cols="70" contenteditable="true"></textarea>*@
            </div>
            <div class="form-group">
                <input id="add-appointment" type="button" value="Afspraak toevoegen" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
