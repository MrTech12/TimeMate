@model TimeMate.Models.NAppointmentViewModel

@{
    ViewData["Title"] = "Nieuwe afspraak toevoegen";
}

<link rel="stylesheet" type="text/css"  href="~/css/AddNormalAppointment.css"/>
<link href="~/lib/jquery/dist/jquery.js" />
<link type="text/javascript" href="~/js/AddNormalAppointment.js" />

<h1>Nieuwe afspraak toevoegen</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input type="datetime" asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input type="datetime" asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AgendaName" class="control-label"></label>
                <select  class="form-control">
                @foreach (var item in Model.AgendaName)
                {
                    <option asp-for="AgendaName">@item</option>
                }
                </select>
                <span asp-validation-for="AgendaName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input type="button" id="bold-text" class="btn btn-secondary" value="Maak text dikgedrukt"/>
                @*<input type="text" asp-for="Description" class="form-control" id="description" />*@
                <textarea id="test" rows="10" cols="70"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
