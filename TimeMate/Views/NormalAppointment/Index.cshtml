@model TimeMate.Models.NormalAppointmentViewModel

@{
    ViewData["Title"] = "Nieuwe afspraak toevoegen";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/add-normalappointment.js"></script>
<link rel="stylesheet" type="text/css" href="~/css/addnormalappointment.css" />

<h1>Nieuwe afspraak toevoegen</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" id="appointment-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <partial name="_AddAppointment" for="@Model.AppointmentViewModel" />

            <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input type="button" id="bolding-text" class="btn btn-info" value="Maak tekst dikgedrukt/niet dikgedrukt" />
                <input type="button" id="save-description" class="btn btn-secondary" value="Tekst opslaan" />

                <div class="description" id="description-box" contenteditable="true"></div>
                <input type="text" id="description-controller" asp-for="Description" hidden="hidden" />

                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Afspraak toevoegen" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
